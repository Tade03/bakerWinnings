<!-- Sección de pestañas y contenido -->
<div class="container mt-5">
    <div class="row">
        <!-- Columna de la izquierda para las pestañas y formularios -->
        <div class="col-md-6">
            <h2>Gestión de Productos (Ingredientes)</h2>
            
            <!-- Pestañas -->
            <ul class="nav nav-tabs" id="productoTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="ingresar-tab" data-bs-toggle="tab" data-bs-target="#ingresar" type="button" role="tab" aria-controls="ingresar" aria-selected="true">Ingresar</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="actualizar-tab" data-bs-toggle="tab" data-bs-target="#actualizar" type="button" role="tab" aria-controls="actualizar" aria-selected="false">Actualizar</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="eliminar-tab" data-bs-toggle="tab" data-bs-target="#eliminar" type="button" role="tab" aria-controls="eliminar" aria-selected="false">Eliminar</button>
                </li>
            </ul>

            <!-- Contenido de las pestañas -->
            <div class="tab-content" id="productoTabsContent">
                <!-- Formulario de ingresar -->
                <div class="tab-pane fade show active" id="ingresar" role="tabpanel" aria-labelledby="ingresar-tab">
                    <form action="/productos" method="POST" class="mt-3">
                        <div class="form-group">
                            <label for="nombre_ingrediente">Nombre del Ingrediente:</label>
                            <input type="text" class="form-control" id="nombre_ingrediente" name="nombre_ingrediente">
                        </div>
                        <div class="form-group">
                            <label for="costo_ingrediente">Costo del Ingrediente:</label>
                            <input type="text" class="form-control" id="costo_ingrediente" name="costo_ingrediente">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Añadir Ingrediente</button>
                    </form>
                </div>

                <!-- Formulario de actualizar -->
                <div class="tab-pane fade" id="actualizar" role="tabpanel" aria-labelledby="actualizar-tab">
                    <form id="formEditarProducto" onsubmit="editarProducto(event)" class="mt-3">
                        <input type="hidden" id="idIngrediente" name="idIngrediente">
                        <div class="form-group">
                            <label for="nombre_ingrediente">Nombre del Producto</label>
                            <input type="text" class="form-control" id="nombre_ingrediente" name="nombre_ingrediente">
                        </div>
                        <div class="form-group">
                            <label for="costo_ingrediente">Costo del Producto</label>
                            <input type="text" class="form-control" id="costo_ingrediente" name="costo_ingrediente">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
                    </form>
                </div>

                <!-- Formulario de eliminar -->
                <div class="tab-pane fade" id="eliminar" role="tabpanel" aria-labelledby="eliminar-tab">
                    <form id="formEliminarProducto" onsubmit="eliminarProducto(event)" class="mt-3">
                        <input type="hidden" id="idIngrediente" name="idIngrediente">
                        <div class="form-group">
                            <label for="nombre_ingrediente">Nombre del Producto</label>
                            <input type="text" class="form-control" id="nombre_ingrediente" name="nombre_ingrediente" readonly>
                        </div>
                        <div class="form-group">
                            <label for="costo_ingrediente">Costo del Producto</label>
                            <input type="text" class="form-control" id="costo_ingrediente" name="costo_ingrediente" readonly>
                        </div>
                        <button type="submit" class="btn btn-danger mt-3">Eliminar Producto</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Columna de la derecha para la tabla -->
        <div class="col-md-6">
            <h3>Lista de Productos</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre del Producto</th>
                        <th>Costo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="tabla-productos"></tbody>
            </table>
        </div>
    </div>
</div>

